<!DOCTYPE html>
<html lang="en">
  <%- include('includes/head.ejs') %>
  <body>
    <%- include('includes/header.ejs') %>
    <main>
      <% if(posts.length === 0){ %>
      <h4>Hey ğŸ‘‹ <%= username %>, you have no posts</h4>
      <% } else{%>
      <h4>Hey ğŸ‘‹ <%= username %>, here are your posts</h4>
      <% } %>

      <ul>
        <% posts.forEach(post=>{%>
        <li>
          <a href="/post/<%= post.id %> ">
